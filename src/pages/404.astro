---
import Layout from '~/layouts/PageLayout.astro';
import { getHomePermalink } from '~/utils/permalinks';

const title = `Error 404`;
---

<Layout meta={{ title }}>
	<section class="flex items-center h-full p-16">
		<div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
			<div class="max-w-md text-center">
				<h2 class="mb-8 font-bold text-9xl">
					<span class="sr-only">Error</span>
					<span class="gradient-primary">404</span>
				</h2>
				<p class="text-3xl font-semibold md:text-3xl">UNABLE_TO_LOCATE_RESOURCE</p>
				<p class="mt-4 mb-8 text-lg text-slate-400"></p>
				<div class="grid grid-cols-2 grid-rows-2 gap-4">
					<a rel="noopener noreferrer" href="../" class="btn-primary w-full inline-flex items-center whitespace-nowrap"
						>Backwards</a
					>
					<a
						rel="noopener noreferrer"
						href={getHomePermalink()}
						class="btn-secondary w-full inline-flex items-center whitespace-nowrap">Homebase</a
					>
					<a
						rel="noopener noreferrer"
						href="/search"
						class="btn-quaternary w-full inline-flex items-center whitespace-nowrap">Search</a
					>
					<a
						rel="noopener noreferrer"
						href="/report"
						class="btn-tertiary w-full inline-flex items-center whitespace-nowrap">Report</a
					>
				</div>
			</div>
		</div>
	</section>
</Layout>
