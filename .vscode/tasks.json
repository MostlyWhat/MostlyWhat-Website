{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Astro Development Server",
            "type": "shell",
            "command": "npm run dev",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Start TailwindCSS JIT Compiler",
            "type": "shell",
            "command": "npx tailwindcss -i ./src/styles/global.css -o ./src/styles/output.css --watch",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}